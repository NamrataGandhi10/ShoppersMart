                            <th>Quantity</th>
                            <th>Total Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data rows will be inserted here -->
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><h5 class="mb-3 mb-md-0">Total</h5></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><h5 id="total-price" class="mb-3 mb-md-0">$0.00</h5></td>
                            <td><button onclick="PlaceOrder()" class="btn btn-info">Place Order</button></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

