            <div class="card flex-fill">
                <div class="card-header">
                    @if (isAdmin == 1)
                    {
                        <!-- Button to Open Modal -->
                        <a href="/Goods/AddProduct/0" class="btn btn-primary">Add New Product</a>
                    }
                    @* <h5 class="card-title mb-0">Latest Projects</h5> *@
                </div>
                <table id="productTable" class="table table-hover my-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>




<script src="~/js/Goods.js"></script>

